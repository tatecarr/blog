<% div_for comment do %>
	<p>
		<strong>Posted <%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.author %><br/>
		<%= h(comment.body) %><br/>
		<% if Blog.find_by_id(Post.find_by_id(comment.post_id).blog_id).author == current_user.username %>
			<%= link_to 'Delete', comment, :method => :delete, :confirm => "Are you sure?" %>
		<% end %>
	</p>
<% end %>